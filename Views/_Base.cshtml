@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <!-- Responsive Master -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <title> - JustGiving</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/ui/2013/css/lib/0.2.1-pure-min.css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:500,400,300,100">

   
    <!-- CSS -->
	<link rel="stylesheet" type="text/css" href="/ui/2013/css/global.css">
